<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="450dp"
    android:layout_height="650dp"
    android:background="@drawable/dialog_radius_background">



    <TextView
        android:id="@+id/tagView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/photoWatchTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp"
        android:text="@string/watchPhoto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/placeWatchTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp"
        android:text="@string/watchPlace"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/clickMarkerWatchTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp"
        android:text="메모 보기"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/myImageViewInDiary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myImageEditButtonInDiary"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="@id/myImageViewInDiary"
        app:layout_constraintStart_toEndOf="@id/myImageViewInDiary"
        app:layout_constraintTop_toTopOf="@id/myImageViewInDiary" />

    <ImageView
        android:id="@+id/partnerImageViewInDiary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintStart_toEndOf="@id/myImageEditButtonInDiary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myDiaryTextView"
        android:layout_width="170dp"
        android:layout_height="400dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dialog_textview_background"
        android:fontFamily="@font/ef_diary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myImageViewInDiary"
        />

    <TextView
        android:id="@+id/partnerDiaryTextView"
        android:layout_width="170dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/dialog_textview_background"
        android:fontFamily="@font/ef_diary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myImageViewInDiary" />


    <EditText
        android:id="@+id/myDiaryEditTextView"
        android:layout_width="170dp"
        android:layout_height="400dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dialog_textview_background"
        android:fontFamily="@font/ef_diary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myImageViewInDiary"
        android:gravity="start|top"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myTextEditButtonInDiary"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/lee_seoyun"
        android:text="수정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myTextEditCompleteButtonInDiary"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/lee_seoyun"
        android:text="완료"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>