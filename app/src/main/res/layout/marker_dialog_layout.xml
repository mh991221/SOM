<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="450dp"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_radius_background">

    <ImageView
        android:id="@+id/myImageViewInDiary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_image_24"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myImageEditButtonInDiary"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toEndOf="@id/myImageViewInDiary"
        app:layout_constraintTop_toTopOf="@id/myImageViewInDiary"
        app:layout_constraintBottom_toBottomOf="@id/myImageViewInDiary"
        android:text="수정"/>

    <ImageView
        android:id="@+id/partnerImageViewInDiary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/myImageEditButtonInDiary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_image_24"/>

    <LinearLayout
        android:id="@+id/textViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myImageViewInDiary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myDiaryTextView"
            android:background="@drawable/dialog_textview_background"
            android:layout_width="170dp"
            android:layout_height="400dp"/>

        <TextView
            android:id="@+id/partnerDiaryTextView"
            android:background="@drawable/dialog_textview_background"
            android:layout_width="170dp"
            android:layout_height="400dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/myTextEditButtonInDiary"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLinearLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="90dp"
        android:text="수정"/>


</androidx.constraintlayout.widget.ConstraintLayout>